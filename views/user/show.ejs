<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h1><%=user.firstName  + " " +  user.lastName %></h1>
			<div class="thumbnail">
				<img class="img-reponsive"src="<%= user.avatar %>" alt="user profile image">
				<div class="caption-full">
					<h4 class="pull-right"></h4>
				</div>
			</div>
		</div>
				
		<div class="col-md-8">
			<% campgrounds.forEach(function(campground){%>
				<ul>
					<li><a href="/campgrounds/<%=campground.slug%>"><%=campground.name%></a></li>
			</ul>
			<%})%>
			
						
			
		</div>
	</div>
</div>
	
<%- include("../partials/footer") %>



