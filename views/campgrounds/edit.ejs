<%- include("../partials/header") %>
<div class="container">
  <div class="row">
	 <h1 class="text-center text-capitalize">Edit <%=campground.name%>
		</h1>
	<div style="width: 30%; margin: 30px auto;">
		<form action="/campgrounds/<%=campground.slug %>?_method=PUT" method="POST" enctype="multipart/form-data">
			<div class="form-group">
			  <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>"> 
			</div>
			<div class="form-group">
				 <input class="form-control" type="number"                              value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01" required> 
			</div>
			 <div class="form-group">
				<input type="file" id="image" name="image" accept="image/*">
			 </div>
			<div class="form-group">
				<input class="form-control" type="text"                                  value="<%=campground.description%>" name="campground[description]">
			 </div>
				<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">
						Submit
				</button>
			  </div>
		</form>
	</div>
</div>	
</div>
<%- include("../partials/footer") %>